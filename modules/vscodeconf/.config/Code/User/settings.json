{
    // Fonts
    "editor.fontFamily": "'Liga Hack', 'Fira Code', 'Hack', 'Droid Sans Mono', 'Inconsolata'",
    "editor.fontLigatures": true,
    "editor.fontSize": 15,

    // Show spaces
    "editor.renderWhitespace": "boundary",
    "editor.renderControlCharacters": true,

    "editor.cursorBlinking": "smooth",
    "editor.smoothScrolling": true,
    "editor.renderLineHighlight": "all",
    "editor.mouseWheelZoom": true,

    "terminal.integrated.fontFamily": "'Hack', 'Inconsolata', 'Monospace Regular','Droid Sans Mono'",
    "terminal.integrated.fontSize": 14,

    // Vim
    "vim.cmdLineInitialColon": true,
    "vim.hlsearch": true,
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before": ["<space>"],
            "after": [],
            "commands": [
                {
                    "command": "cursorPageDown",
                    "args": []
                }
            ]
        },
        {
            "before": ["<S-space>"],
            "after": [],
            "commands": [
                {
                    "command": "cursorPageUp",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "f"],
            "after": [],
            "commands": [
                {
                    "command": "actions.find",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "<space>"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.quickOpen",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "c"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.showCommands",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "g", "g"],
            "after": [],
            "commands": [
                {
                    "command": "git.checkout",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "leader", "f"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.findInFiles",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "l", "c"],
            "after": [],
            "commands": [
                {
                    "command": "editor.action.commentLine",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "s"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.splitEditor",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "t"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.terminal.focus",
                    "args": []
                }
            ]
        },
    ],
    "window.menuBarVisibility": "toggle",
    "workbench.iconTheme": "file-icons",

    // "window.zoomLevel": 0.25,

    "files.watcherExclude": {
        "*.pyc": true,
        "**/__pycache__/**": true,
        "**/.venv/**": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true
    },

    "workbench.statusBar.feedback.visible": false,

    "files.insertFinalNewline": true,
}
